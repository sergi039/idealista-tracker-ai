# ==============================================
# Idealista Land Watch & Rank - Environment Config
# ==============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# --- Required ---

# Flask session security (generate with: python -c "import secrets; print(secrets.token_hex(32))")
SESSION_SECRET=your-secret-key-here

# Database (used by docker-compose, no need to change for Docker setup)
DB_NAME=idealista
DB_USER=idealista
DB_PASSWORD=change-this-password

# --- Email Ingestion (Required for data import) ---

# Gmail IMAP credentials
# Get App Password: https://myaccount.google.com/apppasswords
IMAP_USER=your-email@gmail.com
IMAP_PASSWORD=your-app-password

# Email settings (defaults work for Gmail)
IMAP_HOST=imap.gmail.com
IMAP_PORT=993
IMAP_SSL=true
IMAP_FOLDER=Idealista

# --- Optional: Google APIs (for enrichment) ---

# Google Maps/Places API key
# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_API_KEY=

# --- Optional: AI Analysis ---

# Anthropic API key (for AI property analysis)
ANTHROPIC_API_KEY=

# Optional: override Anthropic model (example: claude-opus-4-5-...)
ANTHROPIC_MODEL=

# OpenAI API key (for ChatGPT comparison)
OPENAI_API_KEY=

# Optional: override OpenAI model (default: gpt-4o-mini)
OPENAI_MODEL=

# --- Debug Mode ---

# Set to true for development (enables hot-reload, debug logs)
DEBUG=false
